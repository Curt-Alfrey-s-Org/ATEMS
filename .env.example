# ATEMS Environment Configuration
# Copy to .env and fill in values

# Database (SQLite for dev, or MySQL/Postgres for production)
SQLALCHEMY_DATABASE_URI=sqlite:///atems.db

# Secret key for session/csrf (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=change-me-to-a-secure-random-string

# Debug mode
DEBUG=False

# Calibration email reminders (optional)
# CALIBRATION_REMIND_DAYS=30
# REMIND_OVERDUE=true
# CALIBRATION_REMIND_TO=admin@example.com,crib@example.com
# ATEMS_BASE_URL=http://127.0.0.1:5000

# SMTP (required for sending reminder emails)
# MAIL_SERVER=smtp.example.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_DEFAULT_SENDER=atems@example.com
# Cron (daily 8am): 0 8 * * * cd /path/to/ATEMS && .venv/bin/python -c "from atems import create_app; from utils.calibration_reminders import send_calibration_reminders; send_calibration_reminders(create_app())"
