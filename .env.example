# ATEMS Environment Configuration
# Copy to .env and fill in values

# Database Configuration
# PostgreSQL (Production) - Recommended
DATABASE_URL=postgresql://atems_user:your_secure_password@atems-postgres:5432/atems
SQLALCHEMY_DATABASE_URI=postgresql://atems_user:your_secure_password@atems-postgres:5432/atems

# PostgreSQL Credentials (used by docker-compose)
POSTGRES_DB=atems
POSTGRES_USER=atems_user
POSTGRES_PASSWORD=your_secure_password

# SQLite (Development fallback)
# SQLALCHEMY_DATABASE_URI=sqlite:///atems.db

# Secret key for session/csrf (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=change-me-to-a-secure-random-string

# Debug mode
DEBUG=False

# When deployed under subpath (e.g. https://domain.com/app/atems), set so url_for generates correct links
# APPLICATION_ROOT=/app/atems

# ProxyFix: auto-enabled when DEBUG=False (for reverse proxy like Nginx). Set USE_PROXY_FIX=true to force.
# Calibration email reminders (optional)
# CALIBRATION_REMIND_DAYS=30
# REMIND_OVERDUE=true
# CALIBRATION_REMIND_TO=admin@example.com,crib@example.com
# ATEMS_BASE_URL=http://127.0.0.1:5000

# SMTP (required for sending reminder emails)
# MAIL_SERVER=smtp.example.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_DEFAULT_SENDER=atems@example.com
# Cron (daily 8am): 0 8 * * * cd /path/to/ATEMS && .venv/bin/python -c "from atems import create_app; from utils.calibration_reminders import send_calibration_reminders; send_calibration_reminders(create_app())"
